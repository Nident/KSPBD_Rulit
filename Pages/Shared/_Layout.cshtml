<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KSPBD_Rulit</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Хедер -->
    <header class="bg-light border-bottom">
        <div class="container d-flex justify-content-between align-items-center py-2">
            <div class="left-panel d-flex align-items-center gap-3">
                <a class="navbar-brand custom-brand" href="/Index">
                    <img alt="Logo" height="30" src="/images/Rectangle.svg" width="30" /> КАСП
                </a>

                <!-- Offcanvas Sidebar -->
                <div class="left-panel-button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" role="button">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M4 6H20M4 12H20M4 18H20" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </div>
                <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasSidebar" aria-labelledby="offcanvasSidebarLabel">
                    <div class="offcanvas-header">
                        <h5 id="offcanvasSidebarLabel">Sidebar Title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <p>Content for the sidebar goes here.</p>
                    </div>
                </div>
            </div>
            <div class="header-buttons d-flex">
                <button class="btn btn-primary me-2">
                    <a href="/authPanle" class="text-white text-decoration-none">Логин</a>
                </button>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="languageButton" data-bs-toggle="dropdown" aria-expanded="false">
                        RU
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="changeLanguage('RU')">RU</a></li>
                        <li><a class="dropdown-item" href="#" onclick="changeLanguage('EN')">EN</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
                <ul class="navbar-nav mb-2 mb-lg-0 text-center gap-5">

                    <!-- Главное -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Главное</a>
                        <ul class="dropdown-menu text-center">
                            <li><a class="dropdown-item" href="#">Action 1</a></li>
                            <li><a class="dropdown-item" href="#">Action 2</a></li>
                            <li><a class="dropdown-item" href="#">Action 3</a></li>
                        </ul>
                    </li>

                    <!-- График работ -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">График работ</a>
                        <ul class="dropdown-menu">
                            <li><button class="btn dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#editModal">Редактировать</button></li>
                            <li><button class="btn dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#deleteModal">Удалить</button></li>
                            <li>
                                <form method="post" action="/graph?handler=Save">
                                    <button id="saveButton" class="btn dropdown-item" type="submit" disabled>
                                        Сохранить
                                    </button>
                                </form>
                            </li>
                            <li>
                                <button class="btn dropdown-item" type="button" disabled>
                                    Сохранить и закрыть
                                </button>
                            </li>
                        </ul>
                    </li>
                    
                    <!-- Настройка -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Настройка</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Settings 1</a></li>
                            <li><a class="dropdown-item" href="#">Settings 2</a></li>
                            <li><a class="dropdown-item" href="#">Settings 3</a></li>
                        </ul>
                    </li>

                    <!-- Вид -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Вид</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">View 1</a></li>
                            <li><a class="dropdown-item" href="#">View 2</a></li>
                            <li><a class="dropdown-item" href="#">View 3</a></li>
                        </ul>
                    </li>

                    <!-- Помощь -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Помощь</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Help 1</a></li>
                            <li><a class="dropdown-item" href="#">Help 2</a></li>
                            <li><a class="dropdown-item" href="#">Help 3</a></li>
                        </ul>
                    </li>

                 
                </ul>
            </div>
        </div>
    </nav>

    <!-- Основной контент -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Футер -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - KSPBD_Rulit - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Получаем кнопку "Сохранить"
            const saveButton = document.getElementById("saveButton");

            // Проверяем, что текущий путь страницы - "/graph"
            if (window.location.pathname === "/graph") {
                saveButton.removeAttribute("disabled"); // Разблокируем кнопку
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
